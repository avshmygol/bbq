<h2>Регистрация</h2>

<div class="row">
  <div class="col-md-6 buffer-top">

    <%= render "devise/shared/error_messages", resource: resource %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
      <div class="mb-3">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', autofocus: true, autocomplete: "name", disabled: :disabled %>
      </div>

      <div class="mb-3">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
      </div>

      <div class="mb-3">
        <%= f.label "Пароль (минимум 6 символов)" %>
        <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Сохранить", class: "btn", style: "background-color: #8199A3; color: white;" %>
      </div>
    <% end %>

    <div class="mt-3 mb-3">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
