<%= form_for(@event, data: { turbo: false }) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @event} %>

  <div class="mb-3">
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :datetime %>
    <p><%= f.datetime_select :datetime, class: 'form-control' %></p>
  </div>

  <div class="mb-3">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.button class: 'btn', style: 'background-color: #8199A3; color: white;' do %>
      <i class='bi bi-check-lg'></i> Сохранить
    <% end %>
    или <%= link_to 'вернуться', :back %>
  </div>
<% end %>
